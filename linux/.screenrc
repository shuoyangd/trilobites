# File: .screenrc
# use bash as default shell
defshell -bash
# # Screen rc file – config options
#
# # don’t display copyright page
startup_message off
#
# # no audible bell, just visual
vbell off
# # detach on hangup
autodetach on
layout autosave
# # If a window goes unresponsive, don’t block the whole session waiting for it.
defnonblock on

# show tabs
#hardstatus alwayslastline "%= %3n %t%? [%h]%? %="
caption always "%= %-w%L>%{= BW}%n*%t%{-}%52<%+w %L="
shelltitle "$ |bash"

#making scrolling possible
defscrollback 5000
termcapinfo xterm* ti@:te@
# Scroll up
# bindkey -d "^[[5S" eval copy "stuff 5\025"
# bindkey -m "^[[5S" stuff 5\025
# 
# # Scroll down
# bindkey -d "^[[5T" eval copy "stuff 5\004"
# bindkey -m "^[[5T" stuff 5\004
# 
# # Scroll up more
# bindkey -d "^[[25S" eval copy "stuff \025"
# bindkey -m "^[[25S" stuff \025
# 
# # Scroll down more
# bindkey -d "^[[25T" eval copy "stuff \004"
# bindkey -m "^[[25T" stuff \004
shell -$SHELL
# the following line makes vim colorscheme work in screen
attrcolor b ".I"
defbce "on"
altscreen on
startup_message off
layout save default
